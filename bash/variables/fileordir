#!/bin/bash

if [[ -f "$1" && -r "$1" ]]; then
    echo "File exists and is readable"
fi


if [[ -z "$1" || "$1" == "--help" ]]; then
    echo "Usage: $0 <filename>"
    echo 1
fi


if [[ ! -f "$1" ]]; then
    echo "Not a file: $1"
fi



if [[ -f "$1" ]]; then
  echo "It's a file "
elif [[ -d "$1" ]]; then
  echo "It's a directory"
else 
  echo "Not found: $1"
fi

